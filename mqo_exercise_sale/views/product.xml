<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="product_form">
            <field name="name">Form view for product</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
	            <xpath expr="//page[@string='Information']" position="inside">
	                <group>
	                	<field name="hasbundles"/>
	                    <field name="bundles">
                       		<tree string="Exercise bundles">
                       			<field name="name"/>
                       		</tree>
	                    </field>
	                </group>
	            </xpath>
	        </field>
		</record>
    </data>
</openerp>

