<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id=exercise_form_view>
            <field name="name">Form view for exercise</field>
            <field name="model">mqo.exercise</field>
            <field name="inherit_id" ref="mqo_exercises.exercise_form_view"/>
            <field name="arch" type="xml">
	            <xpath expr="//page[@string='Assignments']" position="after">
	                <page string="Bundles">
	                    <field name="bundles">
	                        <tree string="Bundles">
	                        	<field name="name"/>
	                            <field name="product_templates"/>
	                        </tree>
	                    </field>
	                </page>
	            </xpath>
	        </field>
		</record>
    </data>
</openerp>

