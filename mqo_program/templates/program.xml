<openerp>
  <data>
	<template id="list" name="List of programs">
      <t t-call="website.layout">
        <t t-set="title"><t t-esc="listname or 'Programs'"/> | Mindquip</t>
        <div id="wrap">
	        <div class="oe_structure"/>
	        <div>
	          <t t-if="category=='individuals'">
			      <section>
			        <div class="container">
			          <div class="row">
			            <div class="col-md-12 mt32 mb32">
			              <h1 class="text-center">Programs for individuals</h1>
			              <h3 class="text-muted text-center">These are programs run for individuals.</h3>
			            </div>
			          </div>
			        </div>
			      </section>
		      </t>
	          <t t-if="category=='organisations'">
			      <section>
			        <div class="container">
			          <div class="row">
			            <div class="col-md-12 mt32 mb32">
			              <h1 class="text-center">Programs for organisations</h1>
			              <h3 class="text-muted text-center">These are programs run for organisations.</h3>
			            </div>
			          </div>
			        </div>
			      </section>
		      </t>
	          <t t-if="category=='all'">
			      <section>
			        <div class="container">
			          <div class="row">
			            <div class="col-md-12 mt32 mb32">
			              <h1 class="text-center">Programs for individuals</h1>
			              <h3 class="text-muted text-center">These are programs run for individuals.</h3>
			            </div>
			          </div>
			        </div>
			      </section>
		      </t>
		      <t t-if="programs">
			      <section>
			        <div class="container">
				        <t t-foreach="programs" t-as="program">
							<div class="row mqo-featured mb32">
								<div class="col-xs-12 col-sm-12 col-md-offset-2 col-md-8">
						    		<div class="row">
					                    <div class="col-xs-3 col-sm-4 col-md-4 pull-left">
					                        <a t-attf-href="/program/{{(program.name.lower())}}/brochure.pdf"><img t-attf-src="/program/{{(program.name.lower())}}/image.jpg" alt="" class="img-rounded img-responsive" /></a>
					                    </div>
					                    <div class=" col-xs-9 col-sm-8 col-md-8">
					                      	<div>
    			                                <div class="mb16">
							                        <div class="pull-right">
								                        <div class="row">
								                        	<!-- Split button -->
									                        <div class="btn-group btn-block">
									                            <a type="button" class="btn btn-primary" t-attf-href="{{(program.pagelink)}}">
									                                Find out more</a>
									                            <button class="btn btn-primary dropdown-toggle pull-right" data-toggle="dropdown">
									                                <span class="caret"></span><span class="sr-only">Other</span>
									                            </button>
									                            <ul class="dropdown-menu" role="menu">
									                                <li><a t-attf-href="/program/{{(program.name.lower())}}/brochure.pdf">Brochure PDF</a></li>
									                                <!-- <li class="divider"></li>
									                                <li><a href="#">Testimonials</a></li> -->
									                            </ul>
									                    	</div>
								                    	</div>
								                        <div class="row mt16">
									                        <div class="btn-group btn-block">
									                            <a class="btn btn-primary btn-block" t-attf-href="/interest/{{slug(program)}}">
									                                Register interest</a>
									                    	</div>
								                    	</div>
							                    	</div>
					                                <div>
					                                	<h3><t t-esc="program.name"/></h3>
					                                </div>
							                    </div>
							                    <div>
								                    <p name="program_name"><t t-esc="program.description"/></p>
							                        <p name="program_session_detail" t-if="program.timeframe_detail"><span class="glyphicon glyphicon-time"></span> <t t-esc="program.session_detail"/></p>
							                        <p name="program_timeframe_detail" t-if="program.timeframe_detail"><span class="glyphicon glyphicon-calendar"></span> <t t-esc="program.timeframe_detail"/></p>
							                        <t name="program_benefits" t-if="program.benefits">
								                        <p><span class="glyphicon glyphicon-check"></span> Key benefit areas:</p>
									                        <p>
									                        <t t-foreach="program.benefits" t-as="link">
									                        	<t t-if="link_index &lt; 3">
									                        		<span class="label label-success"><t t-esc="link.benefit.name"/></span>
									                        	</t>
							                                </t>
							                                </p>
						                                <t t-if="program.benefits[3]">
							                                <p><span class="glyphicon glyphicon-check"></span> Other benefit areas:</p>
									                        <p>
									                        <t t-foreach="program.benefits" t-as="link">
									                        	<t t-if="link_index &gt; 2">
									                        		<span class="label label-info"><t t-esc="link.benefit.name"/></span>
									                        	</t>
							                                </t>
							                                </p>
							                            </t>
					                                </t>
				                                </div>
			                                </div>
					                    </div>
									</div>
								</div>
						    </div>
						</t>
			        </div>
			      </section>
		      </t>
	        </div>
	        <div class="oe_structure"/>
        </div>
	  </t>    
	</template>
	
	
  </data>
</openerp>
