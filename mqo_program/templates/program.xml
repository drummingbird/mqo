<openerp>
  <data>
	<template id="list" name="List of programs">
      <t t-call="website.layout">
        <t t-set="title"><t t-esc="listname or 'Programs'"/> | Mindquip</t>
        <div id="wrap">
	        <div class="oe_structure"/>
	        <div>
	          <t t-if="listname=='individuals'">
			      <section>
			        <div class="container">
			          <div class="row">
			            <div class="col-md-12 mt32 mb32">
			              <h1 class="text-center">Programs for individuals</h1>
			              <h3 class="text-muted text-center">These are programs run for individuals.</h3>
			            </div>
			          </div>
			        </div>
			      </section>
		      </t>
	          <t t-if="listname=='organisations'">
			      <section>
			        <div class="container">
			          <div class="row">
			            <div class="col-md-12 mt32 mb32">
			              <h1 class="text-center">Programs for organisations</h1>
			              <h3 class="text-muted text-center">These are programs run for organisations.</h3>
			            </div>
			          </div>
			        </div>
			      </section>
		      </t>
	          <t t-if="listname=='all'">
			      <section>
			        <div class="container">
			          <div class="row">
			            <div class="col-md-12 mt32 mb32">
			              <h1 class="text-center">Programs for individuals</h1>
			              <h3 class="text-muted text-center">These are programs run for individuals.</h3>
			            </div>
			          </div>
			        </div>
			      </section>
		      </t>
		      <t t-if="programs">
			      <section>
			        <div class="container">
				        <t t-foreach="programs" t-as="program">
							<div class="row mqo-featured mb32">
								<div class="col-xs-12 col-sm-12 col-md-offset-2 col-md-8">
						    		<div class="row">
					                    <div class="col-xs-3 col-sm-4 col-md-4 pull-left">
					                        <img src="http://placehold.it/380x500" alt="" class="img-rounded img-responsive" />
					                    </div>
					                    <div class=" col-xs-9 col-sm-8 col-md-8">
					                      	<div>
    			                                <div class="mb16">
							                        <div class="pull-right">
								                        <div class="row">
								                        	<!-- Split button -->
									                        <div class="btn-group btn-block">
									                            <a type="button" class="btn btn-primary" t-attf-href="/page/{{(program.name)}}">
									                                Find out more</a>
									                            <button class="btn btn-primary dropdown-toggle pull-right" data-toggle="dropdown">
									                                <span class="caret"></span><span class="sr-only">Other</span>
									                            </button>
									                            <ul class="dropdown-menu" role="menu">
									                                <li><a href="#">Brochure PDF</a></li>
									                                <li class="divider"></li>
									                                <li><a href="#">Testimonials</a></li>
									                            </ul>
									                    	</div>
								                    	</div>
								                        <div class="row mt16">
									                        <div class="btn-group btn-block">
									                            <a class="btn btn-primary btn-block" t-attf-href="/interest/{{slug(program)}}">
									                                Register interest</a>
									                    	</div>
								                    	</div>
							                    	</div>
					                                <div>
					                                	<h3><t t-esc="program.name"/></h3>
					                                </div>
							                    </div>
							                    <div>
								                    <p><t t-esc="program.description"/></p>
							                        <p t-if="program.timeframe_detail"><span class="glyphicon glyphicon-time"></span> <t t-esc="program.session_detail"/></p>
							                        <p t-if="program.timeframe_detail"><span class="glyphicon glyphicon-calendar"></span> <t t-esc="program.timeframe_detail"/></p>
							                        <t t-if="program.benefits">
								                        <p><span class="glyphicon glyphicon-gift"></span> Key benefit areas:</p>
								                        <p><span t-if="program.benefits[0]" class="label label-success"><t t-esc="program.benefits[0].benefit.name"/></span>
						                                	<span t-if="program.benefits[1]" class="label label-success"><t t-esc="program.benefits[1].benefit.name"/></span>
						                                	<span t-if="program.benefits[2]" class="label label-success"><t t-esc="program.benefits[2].benefit.name"/></span>
						                                </p>
					                                </t>
				                                </div>
			                                </div>
					                    </div>
									</div>
								</div>
						    </div>
						</t>
			        </div>
			      </section>
		      </t>
	        </div>
	        <div class="oe_structure"/>
        </div>
	  </t>    
	</template>
	
	
  </data>
</openerp>
