<?xml version="1.0" encoding="UTF-8"?>
 <openerp>
    <data>
        <!-- Add instructor field to existing view -->
        <record model="ir.ui.view" id="partner_exercises_form_view">
            <field name="name">partner.exercises</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Exercises">
                        <group>
                            <field name="next_exercise_id"/>
                            <field name="allocation_ids"/>
                            	<tree string="Allocations">
                            		<field name="exercise_id"/>
									<field name="suitability"/>
                                </tree>
                            <field name="assignment_ids"/>
                            	<tree string="Assignments">
                            		<field name="exercise_id"/>
									<field name="rating"/>
                                </tree>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>

        <record model="ir.actions.act_window" id="contact_list_action">
            <field name="name">Contacts</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="configuration_menu" name="Configuration"
                  parent="main_learn_menu"/>
        <menuitem id="contact_menu" name="Contacts"
                  parent="configuration_menu"
                  action="contact_list_action"/>
    </data>
</openerp>