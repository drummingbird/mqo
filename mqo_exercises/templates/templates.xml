<openerp>
  <data>
    <template id="assets_frontend_exercise" inherit_id="website.assets_frontend" name="Exercise assets">
        <xpath expr="." position="inside">
        	<link rel='stylesheet' href='/mqo_exercises/static/src/css/portlet.css'/>
        </xpath>
    </template>
    
	<template id="index">
      <t t-call="website.layout">
        <t t-set="title">My learning</t>
        <div class="oe_structure">
          <div class="container">
            <t t-foreach="exercises" t-as="exercise">
              <div class="row">
              	<div class="col-md-6 col-md-offset-3 mb32 mt32">
				  <div class="portlet">
					<div class="portlet-title">
						<div class="caption">
							<i class="glyphicon glyphicon-calendar"></i>
							<span class="caption-subject text-uppercase"> Your exercise</span>
							<span class="caption-helper">143 likes this week...</span>
						</div>
						<div class="actions">
							<a href="javascript:;" class="btn">
								<i class="glyphicon glyphicon-pencil"></i>
								Edit 
							</a>
							<a href="javascript:;" class="btn">
								<i class="glyphicon glyphicon-thumbs-up"></i>
								Like
							</a>
							<a href="javascript:;" class="btn">
								<i class="glyphicon glyphicon-step-forward"></i>
								Skip
							</a>
						</div>
					</div>
					<div class="portlet-body">
						<h4><t t-esc="exercise.name"/></h4>
						<p><t t-esc="exercise.instructions"/></p>
						<div class="mt16 text-center">
							<a t-att-href="'/exercise/response/%s/%s' % (slug(assignment), assignment.token)" class="btn btn-primary btn-lg mb32"><span class="fa fa-long-arrow-right"/> <span class="hidden-xs">Log how it went</span><span class="visible-xs-inline">Log how it went</span></a>
						</div>
				    </div>
				  </div>
    	 	    </div>
  			  </div>
		    </t>
	  	  </div>
	    </div>
	  </t>    
	</template>
  </data>
</openerp>